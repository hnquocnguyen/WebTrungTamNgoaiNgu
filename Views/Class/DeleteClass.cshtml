@model WebTrungTamNgoaiNgu.Models.Class

@{
    ViewBag.Title = "DeleteClass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DeleteClass</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Class</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            Start Date:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.start_date)
        </dd>

        <dt>
            End Date:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.end_date)
        </dd>

        <dt>
            Teacher:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Teacher.name)
        </dd>

        <dt>
            Course ID:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.course_id)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "ListClasses")
        </div>
    }
</div>
